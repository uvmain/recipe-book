{
  "type": "module",
  "private": true,
  "name": "recipebook",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "setup": "go mod download",
    "clean": "rimraf -v -I server frontend/dist",
    "clean:build": "rimraf -v -I server frontend/dist",
    "clean:full": "rimraf -v -I server data frontend/dist frontend/node_modules node_modules",
    "dev:backend": "go run .",
    "dev:frontend": "npm run dev --workspace frontend",
    "dev": "concurrently npm:caddy npm:dev:backend npm:dev:frontend",
    "build:backend": "cross-env CGO_ENABLED=0 go build -ldflags=\"-s -w\" -o server && cpy server . --rename=server.exe",
    "build:frontend": "npm run build --workspace frontend",
    "build": "npm run build:frontend && npm run build:backend",
    "preview": "concurrently npm:caddy:preview npm:preview:go",
    "preview:go": "server",
    "caddy": "caddy run --config Caddyfile",
    "caddy:preview": "caddy run --config Caddyfile.preview",
    "cspell": "cspell \"**/*.{go,ts,js,vue}\"",
    "lint": "npm run lint --workspace frontend",
    "lint:fix": "npm run lint:fix --workspace frontend"
  },
  "devDependencies": {
    "caddy-baron": "^4.0.0",
    "concurrently": "^9.0.1",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.0",
    "env-cmd": "^11.0.0",
    "rimraf": "^6.0.1"
  }
}
